<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fwiot_device_smoke_detector_action_wizard_form" model="ir.ui.view">
            <field name="name">fwiot_device_smoke_detector_action_wizard_form</field>
            <field name="model">fwiot_device_smoke_detector_action_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        Update to latest version
                    </sheet>
                    <footer>
                        <button name="action_update" string="Update" type="object" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="fwiot_device_smoke_detector_action_wizard_action" model="ir.actions.act_window">
            <field name="name">Action</field>
            <field name="res_model">fwiot_device_smoke_detector_action_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
