<odoo>
    <data>
        <record id="fwiot_device_remote_433_tree" model="ir.ui.view">
            <field name="name">fwiot_device_remote_433_tree</field>
            <field name="model">fwiot_device_remote_433</field>
            <field name="arch" type="xml">
                <tree string="Data" delete="0" create="0" edit="0">
                    <field name="date"/>
                    <field name="door_open"/>
                    <field name="button_press"/>
                    <field name="button_long_press"/>
                </tree>
            </field>
        </record>

        <record id="fwiot_device_remote_433_edit" model="ir.ui.view">
            <field name="name">fwiot_device_remote_433_edit</field>
            <field name="model">fwiot_device_remote_433</field>
            <field name="arch" type="xml">
                <form string="Data" delete="0" create="0" edit="0">
                <sheet string="Data">
                    <group>
                        <field name="date" readonly="1"/>
                        <field name="door_open" readonly="1"/>
                        <field name="button_press" readonly="1"/>
                        <field name="button_long_press" readonly="1"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="fwiot_device_remote_433_filter" model="ir.ui.view">
            <field name="name">fwiot_device_remote_433_filter</field>
            <field name="model">fwiot_device_remote_433</field>
            <field name="arch" type="xml">
                <search string="Search Data">
                    <field name="date_only"/>
                    <group expand="0" string="Group By">
                        <filter string="Date" name="date" domain="[]" context="{'group_by': 'date'}"/>
                        <filter string="Device" name="device" domain="[]" context="{'group_by': 'device_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="fwiot_device_remote_433_action">
            <field name="name">Data</field>
            <field name="res_model">fwiot_device_remote_433</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fwiot_device_remote_433_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_empty_folder">
                No data yet on this device
              </p>
            </field>
        </record>
    </data>
</odoo>       